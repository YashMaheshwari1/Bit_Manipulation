public class bit_manipulation {   
    public static int clearlastbit(int n,int i){
        int bitmask = ((~0)<<i);
        return(n & bitmask);
    }
    public static void main(String args[]){
        System.out.println(clearlastbit(10, 2));
        System.out.println(clearlastbit(5,2));
    }
}

OUTPUT : 8
         4
